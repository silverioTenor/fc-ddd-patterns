{
   "compilerOptions": {
      "incremental": true,
      "target": "es2020",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "baseUrl": "./src",
      "paths": {
         "@domain/*": [
            "domain/*"
         ],
         "@infra/*": [
            "infra/*"
         ],
         "@usecase/*": [
            "usecase/*"
         ],
         "@util/*": [
            "util/*"
         ]
      },
      "resolveJsonModule": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true
   },
   "include": [
      "src/**/*.ts",
      "src/**/entity/*.spec.ts"
   ]
}
